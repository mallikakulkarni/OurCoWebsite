extends layout

block content
    #indexdiv
        #ourCoCarousel(class="carousel slide", data-ride="carousel")
            ol(class="carousel-indicators")
                li(data-target="#ourCoCarousel", data-slide-to="0", class="active")
                li(data-target="#ourCoCarousel", data-slide-to="1", class="active")
                li(data-target="#ourCoCarousel", data-slide-to="2", class="active")
                li(data-target="#ourCoCarousel", data-slide-to="3", class="active")
            div(class="carousel-inner", role="listbox")
                div(class="item active")
                    img(src="/images/Mobile.jpeg", class="img-responsive center-block", alt="Mobile")
                    div(class="carousel-caption img-responsive center-block")
                        h4 Mobile
                        p Derive deep business insight from the Internet of Things (IoT), an integrated fabric of devices, data, connections, processes and people.
                div(class="item")
                    img(src="/images/BigData.jpeg", class="img-responsive center-block", alt="Big Data")
                    div(class="carousel-caption img-responsive center-block")
                        h4 Mobile
                        p Derive deep business insight from the Internet of Things (IoT), an integrated fabric of devices, data, connections, processes and people.
                div(class="item")
                    img(src="/images/IoT.jpeg", class="img-responsive center-block", alt="IoT/IoE")
                    div(class="carousel-caption img-responsive center-block")
                        h4 Mobile
                        p Derive deep business insight from the Internet of Things (IoT), an integrated fabric of devices, data, connections, processes and people.
                div(class="item")
                    video(src="/images/BugsBunny.mp4", type="video/mp4", class="img-responsive center-block", alt="Mobile", controls)
                    div(class="carousel-caption img-responsive center-block")
                        h4 Mobile
                        p Derive deep business insight from the Internet of Things (IoT), an integrated fabric of devices, data, connections, processes and people.
            a(class="left carousel-control", href="#ourCoCarousel", role="button", data-slide="prev")
                span(class="glyphicon glyphicon-chevron-left", aria-hidden="true")
                span(class="sr-only") Previous
            a(class="right carousel-control", href="#ourCoCarousel", role="button", data-slide="next")
                span(class="glyphicon glyphicon-chevron-right", aria-hidden="true")
                span(class="sr-only") Next
        div(class="row")
            div(class="col-xs-6 col-md-3")
                a(href="#", class="thumbnail img-responsive center-block")
                    img(src="/images/Mobile.jpeg")
                    div(class="caption center-block")
                        h4 Mobile
            div(class="col-xs-6 col-md-3")
                a(href="http://localhost:3000/bigdata", class="thumbnail img-responsive center-block")
                    img(src="/images/BigData.jpeg")
                    div(class="caption center-block")
                        h4 Big Data
            div(class="col-xs-6 col-md-3")
                a(href="#", class="thumbnail img-responsive center-block")
                    img(src="/images/IoT.jpeg")
                    div(class="caption center-block")
                        h4 IoT/IoE



