extends layout
block content
    #titlediv
        h1 Locations
    #fremontdiv
        #fremonttitle
            h3 Centers for Global Software Development & Sarasvathy Learning centers:: Fremont
        #fremontaddress
            h4 628 Crescent Terrace<br />Fremont, CA 94536 <br />USA
        #fremontloc
    #secunddiv
        #secundtitle
            h3 Centers for CTO Office:: Secunderabad
        #secundaddress
            h4 1-14/50, minister Road, <br />Secunderabad, T.S., <br />India
        #secunderabadloc
    script(type="text/javascript").
        var locations = [
            {
                id: 'fremontloc',
                latitude: 37.542571,
                longitude: -121.993037,
                center: new google.maps.LatLng(37.5,-122),
                label: '1',
                address: '628 Crescent Terrace, Fremont, CA 94536, USA'
            },
            {
                id: 'secunderabadloc',
                latitude: 17.4500,
                longitude: 78.5000,
                center: new google.maps.LatLng(17.45, 78.5),
                label: '2',
                address: '1-14/50, minister Road, Secunderabad, T.S., India'
            }
        ];
        function initMap() {
            for (i = 0; i < locations.length; i++) {
                var location = locations[i];
                var map = new google.maps.Map(document.getElementById(location.id), {
                    center: location.center,
                    scrollwheel: false,
                    zoom: 8,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                });
                var marker = new google.maps.Marker({
                    position: new google.maps.LatLng(location.latitude, location.longitude),
                    label: location.label
                });
                var infowindow = new google.maps.InfoWindow();
                infowindow.setContent(location.address);
                console.log(infowindow.getContent());
                marker.setMap(map);
                infowindow.open(map, marker);
            }
        }
        google.maps.event.addDomListener(window, 'load', initMap);

